<div class="banner-show" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= @watch.photo %>);">
        <%= link_to "Retour", watches_path, class: "btn-return" %>
  </div>

<div class="container">
  <div class="details">
      <h3>Editer la fiche de votre montre</h3>
    <div class="row">
      <div class="description-watch col-xs-12 col-md-8 col">
        <div class="watch-description form-add">
          <%= simple_form_for @watch do |f| %>
          <p><strong>Modèle</strong></p>
          <div class="form-inline line-form">
            <%= f.input :brand, label: false, collection: @collection_brand, prompt: 'Marque' %>
            <%= f.input :model, label: false, placeholder: 'Modèle' %>
            <%= f.input :gender, label: false, prompt: 'Genre ', collection: @collection_gender %>
          </div>
          <p><strong>Modifier le descriptif</strong></p>
          <%= f.input :description, label: false, placeholder: 'Timeless elegance in consummate form: with three hands and a discreet date display, this simple automatic watch has established itself as one of the most popular Portofino models.' %>
          <p><strong>Détails</strong></p>
          <div class="form-inline line-form">
            <%= f.input :style, label: false, prompt: 'Style ', collection: @collection_style %>
            <%= f.input :production_year, label: false, prompt: 'Année', start_year: 1900, end_year: Time.now.year, order: %i(year) %>
            <%= f.input :case_material, label: false, prompt:  'Matière ', collection: @collection_case_material %>
            <%= f.input :color, label: false, prompt: 'Couleur ', collection: @collection_color %>
            <%= f.input :mechanism, label: false, prompt: 'Méchanisme ', collection: @collection_mechanism %>
          </div>
          <br/>
            <p><strong>Modifier la photo</strong></p>
            <div class="form-inline line-form">
              <%= f.input :photo, label: false, as: :file %>
          </div>
        </div>
      </div>
      <div class="form-booking col-xs-12 col-md-4 col">
        <div>
          <%= f.input :price_per_day, label: 'Modifier le prix par jour', placeholder: '56' %>
          <%= f.submit "Mettre à jour", class: "btn btn-success btn-resa"%>
        </div>
        <div class="about-owner">
          <h3><%= "#{current_user.first_name} #{current_user.last_name}" %></h3>
          <% if @watch.user.photo.present? %>
              <%= cl_image_tag @watch.user.photo, crop: :fill, class: "avatar" %>
            <% else %>
              <%= image_tag('https://www.limestone.edu/sites/default/files/user.png', class: "avatar") %>
            <%end%><span><%= current_user.description%></span>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
