<div class="banner text-center" style="background-image: url('https://images.unsplash.com/photo-1488132828189-4e416661b680?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=5a16bce80dad1d3afc02a021bd255357&auto=format&fit=crop&w=1650&q=80');">
  <div class="banner-content">
    <%= image_tag "montre.png", height: 50 %>
    <h1>Votre temps est précieux</h1>
    <p>Location de montres de luxe de particulier à particulier</p>
    <%= form_tag watches_path, method: :get do %>
      <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Rechercher une montre"
    %>
<% end %>
  </div>
</div>

<div class="content">
  <div class="container">
    <div class="row">
        <% @watches.each do |watch| %>
                <div class="col-xs-12 col-sm-4">
            <div class="watch-card">
              <div class="watch-card-image" style="background-image: url(<%= watch.photo %>)"></div>
              <div class="watch-card-content">
                <div class="watch-card-title">
                  <h4><strong><%= watch.brand %></strong></h4>
                  <p><%= watch.model %></p>
                </div>
              </div>
              <div class="watch-card-actions">
                <span><%= watch.price_per_day %> € par jour</span>
                <span>
                  <% if watch.user.photo.present? %>
                   <%= cl_image_tag watch.user.photo, height: 40, crop: :fill, class: "card-user" %>
                  <% else %>
                     <%= image_tag('https://www.limestone.edu/sites/default/files/user.png', class: "card-user") %>
                  <%end%>
                </span>

              </div>
              <%= link_to "", watch_path(watch), class: 'card-link' %>
            </div>
          </div>
        <% end %>
      </div>
  </div>
  <div id="map" data-markers="<%= @markers.to_json %>"></div>
</div>

