      <%= simple_form_for(@booking) do |f| %>
        <%= f.input :status, as: :hidden, input_html: {:value => "45"}%>
        <%= f.submit "Confirmer la location", class: "btn btn-success" %>
      <%end%>
    <% elsif @booking.status == "45" %>
      <%= simple_form_for(@booking) do |f| %>
